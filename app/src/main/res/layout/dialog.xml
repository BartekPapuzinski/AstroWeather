<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_root"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <TextView
            android:gravity="center_horizontal"
            android:id="@+id/tvDialogTitle"
            android:text="dialogTitle"
            android:textSize="10pt"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent" />
    <TextView
            android:text="Długość"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/longitudetx" android:textSize="18sp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/longitude"/>
    <TextView
            android:text="Szerokość"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/latitudetx" android:textSize="18sp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/latitude"/>
    <Button
            android:text="Ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/enter"/>

</LinearLayout>